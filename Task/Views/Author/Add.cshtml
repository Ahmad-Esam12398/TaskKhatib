@{
}
<h2>Add New Author</h2>

<form method="post">
    <div class="d-flex m-2">
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-2">
            <input asp-for="Name" />
        </div>
        <div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="d-flex m-2">
        <div class="col-2">
            <label asp-for="Bio"></label>
        </div>
        <div class="col-2">
            <textarea asp-for="Bio"></textarea>
        </div>
        <div>
            <span class="text-danger" asp-validation-for="Bio"></span>
        </div>
    </div>
    <div class="d-flex m-2">
        <div class="col-2">
            <label asp-for="DateOfBirth"></label>
        </div>
        <div class="col-2">
            <input asp-for="DateOfBirth" type="date" />
        </div>
        <div class="col-2">
            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
        </div>
    </div>
    <button type="submit">Add Author</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}