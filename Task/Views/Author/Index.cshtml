@model IEnumerable<AuthorDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}
<h3>Authors</h3>

<table id="authorsTable" class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Bio</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>@author.Bio</td>
                <td>@author.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>
                    <button><a asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id">Edit</a></button> |
                    <button><a asp-controller="Author" asp-action="Delete" asp-route-AuthorId="@author.Id">Delete</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button><a asp-action="Add">Add</a></button>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#authorsTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthChange": true,
                "pageLength": 10
            });
        });)
    </script>
}