@model BookForManipulationDto
@{
    ViewData["Title"] = "Add";
    List<SelectListItem> AuthorSelectListItems = (List<SelectListItem>)ViewData["authors"];
    List<SelectListItem> genreSelectListItems = (List<SelectListItem>)ViewData["genres"];
}
<h2>Add New Book</h2>
<form method="post">
    <div class="d-flex m-2">
        <div class="col-2">
            <label asp-for="Title"></label>
        </div>
        <div class="col-2">
            <input asp-for="Title" />
        </div>
        <div>
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="d-flex m-2">
        <div class="col-2">
            <label>Author</label>
        </div>
        <div class="col-2">
            <select asp-for="AuthorId" asp-items="AuthorSelectListItems">
                <option value=""> -- Select Author --</option>
            </select>
        </div>
        <div>
            <span class="text-danger" asp-validation-for="AuthorId"></span>
        </div>
    </div>
    <div class="d-flex m-2">
        <div class="col-2">
            <label asp-for="ISBN"></label>
        </div>
        <div class="col-2">
            <textarea asp-for="ISBN"></textarea>
        </div>
        <div>
            <span class="text-danger" asp-validation-for="ISBN"></span>
        </div>
    </div>
    <div class="d-flex m-2">
        <div class="col-2">
            <label>Genre </label>
        </div>
        <div class="col-2">
            <select asp-for="GenreId" asp-items="genreSelectListItems">
                <option value=""> -- Select Genre --</option>
            </select>
        </div>
        <div>
            <span class="text-danger" asp-validation-for="GenreId"></span>
        </div>
    </div>
        <div class="d-flex m-2">
        <div class="col-2">
            <label asp-for="PublishDate"></label>
        </div>
        <div class="col-2">
            <input asp-for="PublishDate" type="date" />
        </div>
        <div class="col-2">
            <span class="text-danger" asp-validation-for="PublishDate"></span>
        </div>
    </div>
    <div class="d-flex m-2">
        <div class="col-2">
            <label asp-for="CopiesAvailable"></label>
        </div>
        <div class="col-2">
            <input asp-for="CopiesAvailable" type="number" min="0" />
        </div>
        <div class="col-2">
            <span class="text-danger" asp-validation-for="CopiesAvailable"></span>
        </div>
    </div>
    <button type="submit">Add Book</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}